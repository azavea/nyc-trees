server {
  listen *:80;
  server_name _;

  root {{ app_home }}/static;

  access_log /var/log/nginx/nyc-trees-app.access.log logstash_json;

  location /favicon.ico {
    # we primarily use favicon link tags to server
    # favicons more robustly. however, some clients
    # still send requests to /favicon.ico, putting
    # unnecessary load on gunicorn appservers. This
    # acts as a failsafe against those cases.
    {% if ['packer'] | is_in(group_names) -%}
    etag on;
    expires 2h;
    {% endif %}

    rewrite /favicon.ico /static/favicon.ico;
  }

  location /static/img/training/ {
    {% if ['packer'] | is_in(group_names) -%}
    etag on;
    expires 2h;
    {% endif %}

    alias {{ app_static_root }}img/training/;
  }

  location /static/training/ {
    {% if ['packer'] | is_in(group_names) -%}
    etag on;
    expires 2h;
    {% endif %}

    alias {{ app_static_root }}training/;
  }

  location /static/ {
    {% if ['packer'] | is_in(group_names) -%}
    etag on;
    expires max;
    {% endif %}

    alias {{ app_static_root }};
  }

  location /media/ {
    {% if ['packer'] | is_in(group_names) -%}
    etag on;
    expires 1h;
    {% endif %}

    alias {{ app_media_root }};
  }

  location /health-check/ {
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header Host $http_host;
    proxy_redirect off;

    proxy_pass http://127.0.0.1:8000/health-check/;

    break;
  }

  location / {
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header Host $http_host;
    proxy_redirect off;

    {% if ['packer'] | is_in(group_names) -%}
    if ($http_x_forwarded_proto != "https") {
      return 301 https://$host$request_uri;
    }
    {% endif %}

    proxy_pass http://127.0.0.1:8000;
  }
}
